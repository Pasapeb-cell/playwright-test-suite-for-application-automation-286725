{
  "name": "playwright-test-suite-for-application-automation",
  "version": "1.0.0",
  "description": "Playwright end-to-end test suite",
  "scripts": {
    "test": "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 CI=true playwright test",
    "test:ci": "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 CI=true playwright test --reporter=github,junit,html",
    "test:smoke": "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 CI=true playwright test --grep @smoke",
    "test:smoke:chromium": "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 CI=true playwright test --grep @smoke --project=chromium",
    "test:smoke:firefox": "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 CI=true playwright test --grep @smoke --project=firefox",
    "test:smoke:webkit": "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 CI=true playwright test --grep @smoke --project=webkit",
    "test:dryrun": "playwright test --list",
    "lint": "eslint \"tests/**/*.{ts,js}\" || true",
    "prepare": "playwright install --with-deps",
    "postinstall": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "eslint": "^8.57.1",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0"
  },
  "license": "ISC"
}
