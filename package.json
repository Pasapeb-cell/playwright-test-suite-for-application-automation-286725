{
  "name": "playwright-test-suite-for-application-automation",
  "version": "1.0.0",
  "description": "Playwright end-to-end test suite",
  "scripts": {
    "test": "PLAYWRIGHT_HEADLESS=1 playwright test",
    "test:ci": "PLAYWRIGHT_HEADLESS=1 playwright test --reporter=github,junit,html",
    "test:dryrun": "playwright test --list",
    "prepare": "playwright install --with-deps",
    "postinstall": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  },
  "license": "ISC"
}
